@using Medico.Models
@using Medico.Services
@inject ICitas iCitas

@if (citas.Count > 0)
{
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Citas de hoy</h5>
        <ul class="list-group list-group-light">
                @foreach(var cita in citas)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold">@cita.Paciente.Nombre @cita.Paciente.Apellido1</div>
                            <div class="text-muted">@cita.Fecha</div>
                        </div>
                        @if (cita.Fecha > DateTime.Now)
                        {
                            <span class="badge rounded-pill badge-success">Pendiente</span>
                        }
                        else
                        {
                            <span class="badge rounded-pill badge-danger">Vencida</span>
                        }
                    </li>
                }
        </ul>

    </div>
    </div>
}
else
{
<p>Loading ...</p>    
}

@code {
    List<Cita> citas = new List<Cita>();
    protected override async Task OnInitializedAsync()
    {
        citas = await iCitas.ObtenerCitashoy();
    }
}
